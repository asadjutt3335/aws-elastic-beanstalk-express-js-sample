pipeline {
    agent { 
        docker { 
            image 'node:16'  // Use Node 16 Docker image 
            args '-v /var/run/docker.sock:/var/run/docker.sock'  // Bind Docker socket for DinD 
        } 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install --save'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Snyk Security Scan') {
            steps {
                script {
                    // Install Snyk CLI globally
                    sh 'npm install -g snyk'
                    // Authenticate Snyk (SNYK_API_TOKEN should be stored in Jenkins credentials)
                    sh 'snyk auth $SNYK_API_TOKEN'
                    // Run Snyk to check for vulnerabilities
                    sh 'snyk test'
                }
            }
        }
    }

    post {
        failure {
            script {
                echo 'Build failed due to vulnerabilities'
            }
        }
        always {
            cleanWs()  // Clean up workspace after build
        }
    }
}
