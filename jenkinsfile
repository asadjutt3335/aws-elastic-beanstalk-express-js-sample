pipeline {
    agent { 
        docker { 
            image 'node:16'  
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'  
        } 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm config set cache /home/jenkins/.npm-cache --global'
                    sh 'npm install --save'
                    sh 'npm audit fix'  // Fix vulnerabilities
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'npm run build'  // Ensure build script exists in package.json
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Snyk Security Scan') {
            steps {
                script {
                    sh 'npm install -g snyk'
                    sh 'snyk auth $SNYK_API_TOKEN'
                    sh 'snyk test'
                }
            }
        }
    }

    post {
        failure {
            script {
                echo 'Build failed due to vulnerabilities or errors'
            }
        }
        always {
            cleanWs()  
        }
    }
}
