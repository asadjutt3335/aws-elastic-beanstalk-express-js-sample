pipeline {
    agent {
        docker {
            image 'node:16'
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm config set cache /home/jenkins/.npm-cache --global'
                sh 'npm install'
                sh 'npm audit fix'
            }
        }

        // Remove or comment out the Build stage
        /*
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        */

        stage('Test') {
            steps {
                sh 'npm test' // Include tests if you have them
            }
        }

        stage('Snyk Security Scan') {
    steps {
        script {
            try {
                sh 'npm install -g snyk'
                sh 'snyk auth'
                sh 'snyk test'
            } catch (Exception e) {
                echo "Snyk scan failed. Skipping security scan."
            }
        }
    }
}
    post {
        failure {
            echo 'Build failed due to vulnerabilities or errors'
        }
        always {
            cleanWs()
        }
    }
}
