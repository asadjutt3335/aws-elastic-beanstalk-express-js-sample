pipeline {
    agent {
        docker {
            image 'node:16'  // Use Node 16 Docker image
            args '-v /var/run/docker.sock:/var/run/docker.sock'  // Bind Docker socket for Docker-in-Docker
        }
    }
    
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Install project dependencies using npm
                    sh 'npm install --save'
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Build the application
                    sh 'npm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Run tests (adjust according to the available test script)
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            // Clean up after build (optional)
            cleanWs()
        }
    }
}
